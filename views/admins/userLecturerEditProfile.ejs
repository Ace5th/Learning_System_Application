<% layout("layouts/boilerplateAdmins") %>

    <h1 class="page-title mb-4">
        EDIT LECTURER PROFILE
    </h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow mb-3 py-2">
                <h2 class="text-center mb-1">Edit Lecturer Profile Below</h2>
            </div>
            <div class="card shadow">
                <div class="card-body">
                    <form action="/admin/user-lecturers/<%= lecturer._id %>/edit-lecturer?_method=PUT" method="POST"
                        novalidate class="validated-form">
                        <div class="mb-3">
                            <label for="username" class="form-label">NIP</label>
                            <input type="text" class="form-control" id="username" name="lecturer[username]"
                                placeholder="NIP" value="<%= lecturer.username %>">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="lecturer[name]" placeholder="Name"
                                value="<%= lecturer.name %>">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-mail</label>
                            <input type="email" class="form-control" id="email" name="lecturer[email]"
                                placeholder="E-mail" value="<%= lecturer.email %>">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="department">Department</label>
                            <select class="form-select" id="department" name="lecturer[department]">
                                <option value="<%= lecturer.department %>" selected>
                                    <%= lecturer.department %>
                                </option>
                                <% for (let department of departments) { %>
                                    <option value="<%= department %>">
                                        <%= department %>
                                    </option>
                                    <% } %>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="lecturer[password]"
                                placeholder="New Password">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-secondary">Edit Lecturer</button>
                        </div>
                    </form>
                    <a class="btn btn-sm btn-secondary mt-3" href="/admin/user-lecturers/<%= lecturer._id %>">&larr;
                        Previous Page</a>
                </div>
            </div>
        </div>
    </div>