<% layout("layouts/boilerplateAdmins") %>

    <div class="card text-center">
        <div class="card-header">
            DELETE
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure?</h5>
            <p class="card-text">Doing this will permanently delete the admin: <%= admin.username %> | <%= admin.name %>
            </p>
            <form class="mx-4 delete-user-form" action="/admin/user-admins/<%= admin._id %>/delete-admin?_method=DELETE"
                method="POST">
                <button class="btn btn-secondary">Yes</button>
            </form>
            <a href="/admin/user-admins/<%= admin._id %>" class="btn btn-secondary mx-4">No</a>
        </div>
        <div class="card-footer text-muted">
        </div>
    </div>