<% layout("layouts/boilerplateAdmins") %>

    <h1 class="page-title">
        ASSIGNMENT: <%= lecturer.username %>
    </h1>

    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow mb-3 py-2">
                <h2 class="ps-3">Write Below</h2>
            </div>
            <div class="card shadow">
                <div class="card-body">
                    <form action="/admin/user-lecturers/<%= lecturer._id %>/assignment" method="POST"
                        class="validated-form" enctype="multipart/form-data" novalidate>
                        <div class="mb-3">
                            <label class="form-label h5" for="title">Title</label>
                            <input class="form-control" type="text" name="assignment[title]" id="title"
                                placeholder="Title" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label h5">Add a PDF</label>
                            <input class="form-control" type="file" id="content" name="content" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="lecturers-select">Author</label>
                            <select class="form-select" id="lecturers-select" name="assignment[author]">
                                <option selected>Choose...</option>
                                <% for (let student of students) { %>
                                    <option value="<%= student._id %>">
                                        <%= student.username %> | <%= student.name %> | <%= student.department %>
                                    </option>
                                    <% } %>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="phase-select">Phase</label>
                            <select class="form-select" id="phase-select" name="assignment[phase]">
                                <option selected>Choose...</option>
                                <% for (let phase of phases) { %>
                                    <option value="<%= phase %>">
                                        <%= phase %>
                                    </option>
                                    <% } %>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-secondary">Add Assignment</button>
                        </div>
                    </form>
                    <a class="btn btn-sm btn-secondary mt-3 mx-3"
                        href="/admin/user-lecturers/<%= lecturer._id %>">&larr;
                        Previous Page</a>
                </div>
            </div>
        </div>
    </div>