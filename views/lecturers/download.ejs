<% layout("layouts/boilerplateStudents") %>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header text-center">
                    Download File
                </div>
                <div class="card-body text-center">
                    <p class="card-text text-center">Do you want to download the file?</p>
                    <a class="btn btn-secondary mx-3 download" download="" href="<%= downloadUrl %>">
                        <h6>Download</h6>
                    </a>
                    <a class="btn btn-secondary mx-3" onclick="history.back()">
                        <h6>&larr; Previous Page</h6>
                    </a>
                </div>
                <div class="card-footer text-muted"></div>
            </div>
        </div>
    </div>