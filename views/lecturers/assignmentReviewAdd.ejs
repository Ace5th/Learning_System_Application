<% layout("layouts/boilerplateLecturers") %>

    <h1 class="page-title">
        Review: <%= assignment.title %>
    </h1>

    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow mb-3 py-2">
                <h2 class="ps-3">Write Below</h2>
            </div>
            <div class="card shadow">
                <div class="card-body">
                    <form
                        action="/lecturer/student/<%= student._id %>/assignment/<%= assignment._id %>/review/add-review"
                        method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
                        <% if (assignment.phase=="Phase 1" ) { %>
                            <% for (let i=1; i<4; i++) {%>
                                <div>
                                    <div class="mb-1">
                                        <label class="form-label h5" for="title">Title</label>
                                    </div>
                                    <div class="input-group mb-3">
                                        <select class="form-select" id="title" name="review[title]">
                                            <option value="Chapter <%= i %>" selected>Chapter <%= i %>
                                            </option>
                                            <% for (let rTitle of reviewTitles.slice(0,3)) { %>
                                                <option value="<%= rTitle %>">
                                                    <%= rTitle %>
                                                </option>
                                                <% } %>
                                        </select>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label h5" for="content">Content</label>
                                        <textarea class="form-control" type="text" name="review[content]" id="content"
                                            placeholder="Content" required></textarea>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <% } %>
                                    <div class="mb-3">
                                        <label for="file" class="form-label h5">Add a PDF (Optional)</label>
                                        <input class="form-control" type="file" id="file" name="file">
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="mb-3">
                                        <button class="btn btn-secondary">Give Review</button>
                                    </div>
                                    <% } else if (assignment.phase=="Phase 2" ) { %>
                                        <% for (let i=1; i<6; i++) {%>
                                            <div>
                                                <div class="mb-1">
                                                    <label class="form-label h5" for="title">Title</label>
                                                </div>
                                                <div class="input-group mb-3">
                                                    <select class="form-select" id="title" name="review[title]">
                                                        <option value="Chapter <%= i %>" selected>Chapter <%= i %>
                                                        </option>
                                                        <% for (let rTitle of reviewTitles.slice(0, 5)) { %>
                                                            <option value="<%= rTitle %>">
                                                                <%= rTitle %>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                    <div class="valid-feedback">
                                                        Looks good!
                                                    </div>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label h5" for="content">Content</label>
                                                    <textarea class="form-control" type="text" name="review[content]"
                                                        id="content" placeholder="Content" required></textarea>
                                                    <div class="valid-feedback">
                                                        Looks good!
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <% } %>
                                                <div class="mb-3">
                                                    <label for="file" class="form-label h5">Add a PDF (Optional)</label>
                                                    <input class="form-control" type="file" id="file" name="file">
                                                </div>
                                                <div class="valid-feedback">
                                                    Looks good!
                                                </div>
                                                <div class="mb-3">
                                                    <button class="btn btn-secondary">Give Review</button>
                                                </div>
                                                <% } %>
                    </form>
                    <a class="btn btn-sm btn-secondary mt-3 mx-3" onclick="history.back()">&larr;
                        Previous Page</a>
                </div>
            </div>
        </div>
    </div>