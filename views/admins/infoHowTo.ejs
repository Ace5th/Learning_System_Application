<% layout("layouts/boilerplateAdmins") %>

    <h1 class="page-title">GUIDE</h1>
    <div class="dropdown">
        <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            &#8226;&#8226;&#8226;
        </button>
        <ul class="dropdown-menu dropdown-menu-dark">
            <li>
                <a class="dropdown-item" href="/admin/info-howtos">Previous Page</a>
            </li>
        </ul>
    </div>

    <% if (howto.files!=undefined) { %>
        <div class="row">
            <div class="col-6 offset-3">
                <div id="howToCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% howto.files.forEach((img, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ''%> ">
                                <img class="d-block w-100" src="<%= img.url %> " alt="">
                            </div>
                            <% }) %>
                    </div>
                    <% if(howto.files.length> 1) {%>
                        <a class="carousel-control-prev" href="#howToCarousel" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only"></span>
                        </a>
                        <a class="carousel-control-next" href="#howToCarousel" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only"></span>
                        </a>
                        <% } %>
                </div>
            </div>
        </div>
        <% } %>

            <div class="row mt-5">
                <h4>Detail</h4>
            </div>

            <table class="table table-striped-columns">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">Audience</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            <%= howto.title %>
                        </th>
                        <td>
                            <%= howto.content %>
                        </td>
                        <td>
                            <%= howto.audience %>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-secondary dropdown-toggle" type="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    &#8226;&#8226;&#8226;
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item"
                                            href="/admin/info-howtos/<%= howto.id %>/edit-howto">Edit</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="/admin/info-howtos/<%= howto.id %>/delete-howto">Delete</a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>