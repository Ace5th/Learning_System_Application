<% layout("layouts/boilerplateAdmins") %>

    <h1 class="page-title">
        LETTER OF APPROVAL:
    </h1>

    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow mb-3 py-2">
                <h2 class="ps-3">Add Your Letter Below</h2>
            </div>
            <div class="card shadow">
                <div class="card-body">
                    <form action="/admin/user-lecturers/<%= lecturer._id %>/loa" method="POST" class="validated-form"
                        enctype="multipart/form-data" novalidate>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="student-select">Student</label>
                            <select class="form-select" id="student-select" name="student">
                                <option selected>Choose...</option>
                                <% for (let student of studentsWithoutLoa) { %>
                                    <option value="<%= student._id %>">
                                        <%= student.username %> | <%= student.name %> | <%= student.department %>
                                    </option>
                                    <% } %>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="file" class="form-label h5">Add a PDF</label>
                            <input class="form-control" type="file" id="file" name="file" required>
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-secondary">Send Letter of Approval</button>
                        </div>
                    </form>
                    <a class="btn btn-sm btn-secondary mt-3 mx-3"
                        href="/admin/user-lecturers/<%= lecturer._id %>">&larr;
                        Previous Page</a>
                </div>
            </div>
        </div>
    </div>